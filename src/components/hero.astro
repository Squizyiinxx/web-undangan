---
let {name} = Astro.props 

---

<div id={name} class="w-full flex-col mx-auto flex text-center mt-10 z-10 px-10 py-8 h-screen items-center">
    <h1 class="text-3xl mb-5 font-Dancing my-primary-color font-bold md:text-6xl">Mukaromah & Faisol</h1>
    <p class="text-sm mb-3 xl:my-secondary-color text-slate-100 md:text-lg">We Are Getting Merried</p>
    <span class="text-lg my-primary-color font-great md:text-3xl ">Jum'at, 26 Juli 2024</span>
    <div class="w-full items-ceneter text-center mt-10 flex flex-col justify-center">
        <h1 class="text-2xl xl:my-secondary-color text-slate-100 text-bold font-great md:text-3xl mb-10">Count Down</h1>
        <div class="grid grid-cols-4 gap-2 mt-44 md:w-1/3 w-full mx-auto items-center">
            <div class="flex flex-col my-secondary-bg items-center border-2 border-[#966543] px-3 py-5 rounded-lg justify-center">
                <h3 class="xl:my-secondary-color text-slate-100 days md:text-xl"></h3>
                <p class="text-[10px] md:text-xl text-slate-100">Hari</p>
            </div>
            <div class="flex flex-col my-secondary-bg border-2 border-[#966543] px-3 py-5 rounded-lg items-center justify-center">
                <h3 class="xl:my-secondary-color text-slate-100 hours md:text-xl"></h3>
                <p class="text-[10px] text-slate-100 md:text-xl">Jam</p>
            </div>
            <div class="flex flex-col my-secondary-bg border-2 border-[#966543] px-3 py-5 rounded-lg items-center justify-center">
                <h3 class="xl:my-secondary-color text-slate-100 minutes md:text-xl"></h3>
                <p class="text-[10px] text-slate-100 md:text-xl">Menit</p>
            </div>
            <div class="flex flex-col my-secondary-bg border-2 border-[#966543] px-3 py-5 rounded-lg items-center justify-center">
                <h3 class="xl:my-secondary-color text-slate-100 seconds md:text-xl"></h3>
                <p class="text-[10px] text-slate-100 md:text-xl">Detik</p>
            </div>
        </div>
       
    </div>
    
</div>
<script>
    const daysTag: any = document.querySelector(".days");
    const hoursTag: any = document.querySelector(".hours");
    const minutesTag: any = document.querySelector(".minutes");
    const secondsTag: any = document.querySelector(".seconds");

    const targetDate = new Date("2024-07-26");
    
    function updateCountdown() {   
    const now = new Date();
    const total = targetDate.getTime() - now.getTime();
    let days = Math.floor(total / (1000 * 60 * 60 * 24));
    let hours = Math.floor((total % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    let minutes = Math.floor((total % (1000 * 60 * 60)) / (1000 * 60));
    let seconds = Math.floor((total % (1000 * 60)) / 1000);
    daysTag.innerHTML = days;
    hoursTag.innerHTML = hours;
    minutesTag.innerHTML = minutes;
    secondsTag.innerHTML = seconds;
    setInterval(updateCountdown, 1000);
}
updateCountdown();

</script>